{
    "name": "danielbachhuber/composer-lock-updater",
    "description": "Run composer-lock-updater in your CI system for bot-powered composer.lock pull requests.",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Bachhuber",
            "email": "daniel@handbuilt.co"
        }
    ],
    "require-dev": {
        "satooshi/php-coveralls": "~1",
        "squizlabs/php_codesniffer": "^2.7",
        "phpunit/phpunit": "^7"
    },
    "bin": [
        "bin/clu"
    ],
    "autoload": {
        "psr-4": {"CLU\\": "src/"}
    },
    "scripts": {
        "lint": "find src -name '*.php' -exec php -l {} \\;",
        "cs": "./vendor/bin/phpcs",
        "cbf": "./vendor/bin/phpcbf",
        "unit": "./vendor/bin/phpunit --colors=always",
        "test": [
            "@unit",
            "@cs",
            "@lint"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
